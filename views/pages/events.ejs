<!DOCTYPE html>
<html lang="en">
<head>
  <title>About Us</title>
  <link rel="stylesheet" href="/css/styles.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body style="background: url('/images/background-image.jpg') no-repeat center center fixed; background-size: cover;"></body>
<%- include('../partials/header', { title: 'Events' }) %>

<h1 class="text-center mb-5 text-white">Upcoming Events</h1>

<div class="container d-flex justify-content-center">
  <div class="d-flex flex-column gap-4" style="width: 100%; max-width: 900px;">
    <% events.forEach(event => { %>
      <div class="card bg-white text-dark shadow-lg p-4" style="border-radius: 1rem;">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
          
          <!-- Text Content -->
          <div class="flex-grow-1">
            <h3 class="card-title"><%= event.name %></h3>
            <p class="mb-1"><strong>Date:</strong> <%= event.date %></p>
            <p class="mb-1"><strong>Time:</strong> <%= event.time %></p>
            <p class="mb-1"><strong>Type:</strong> <%= event.type %></p>

            <% if (event.opponent) { %>
              <p class="mb-1"><strong>Opponent:</strong> <%= event.opponent %></p>
            <% } %>

            <% if (event.location) { %>
              <p class="mb-1"><strong>Location:</strong> <%= event.location %></p>
            <% } %>

            <% if (event.platform) { %>
              <p class="mb-1"><strong>Platform:</strong> <%= event.platform %></p>
            <% } %>

            <% if (event.description) { %>
              <p class="mt-2"><%= event.description %></p>
            <% } %>
          </div>

          <!-- Image on the Right -->
          <% if (event.image) { %>
            <div style="max-width: 200px;">
              <img src="<%= event.image %>" alt="<%= event.name %>" class="img-fluid rounded object-fit-cover" style="height: 150px; width: 100%;">
            </div>
          <% } %>

        </div>
      </div>
    <% }); %>
  </div>
</div>

<%- include('../partials/footer') %>

</body>
</html>